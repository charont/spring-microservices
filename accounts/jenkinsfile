pipeline
{
  agent any
   tools { 
        maven 'Maven 3.6.0'
    }
	environment{
		dockerImage = ''
		registry = 'charont/charont'
		registryCredential = 'docker-hub-id'
	}
  stages{
      stage('Clone repository') {
        	steps{
			checkout scm
			}
    }
      stage('Build Docker Image') {
            steps {
			dir ('accounts') {
					sh 'mvn spring-boot:build-image -DskipTests'
				}
               
            }
        }
  
  
  }
    
}