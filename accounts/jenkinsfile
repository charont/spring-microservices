pipeline
{
  agent any
   tools { 
        maven 'Maven 3.6.0'
    }
  stages{
      stage('Clone repository') {
        	steps{
			checkout scm
			}
    }
      stage('Build Docker Image') {
            steps {
			dir ('accounts') {
					withDockerRegistry(credentialsId: 'docker-hub-id', url: 'https://index.docker.io/v1/') {
						sh 'docker build -t charont/accounts:latest'
					}
				}
               
            }
        }
  
  
  }
    
}