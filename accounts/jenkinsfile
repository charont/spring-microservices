pipeline
{
  agent any
   tools { 
        maven 'Maven 3.6.0'
    }
  stages{
	stage('Initialize'){
        def dockerHome = tool 'mydocker'
        env.PATH = "${dockerHome}/bin:${env.PATH}"
    }
      stage('Clone repository') {
        	steps{
			checkout scm
			}
    }
      stage ('Build & Test') {
         steps {
			 dir ('accounts') {
					 sh 'mvn clean install'
				}
          
      }
      }
      stage('Build Docker Image') {
            steps {
			dir ('accounts') {
					 sh 'docker build -t charont/accounts:latest .'
				}
               
            }
        }
  
  
  }
    
}