pipeline
{
  agent any
   tools { 
        maven 'Maven 3.6.0'
    }
  stages{
  
      stage('Clone repository') {
        	steps{
			checkout scm
			}
    }
      stage ('Build & Test') {
         steps {
			 dir ('accounts') {
					 sh 'mvn clean install'
				}
          
      }
      }
      stage('Build Docker Image') {
            steps {
			dir ('accounts') {
					 sh 'mvn spring-boot:build-image -DskipTest'
				}
               
            }
        }
  
  
  }
    
}